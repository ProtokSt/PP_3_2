// вспомогательный код для ручной генерации таблицы
create table pp_3_1_2.users
(
    id         bigint auto_increment
        primary key,
    department varchar(15) null,
    password   varchar(15) null,
    salary     int         null,
    username   varchar(15) null
);

create table pp_3_1_2.roles
(
    id   bigint auto_increment
        primary key,
    name varchar(15) null
);

CREATE TABLE pp_3_1_2.users_roles
(
    user_id bigint NOT NULL,
    role_id bigint NOT NULL,
    PRIMARY KEY (user_id, role_id),
    FOREIGN KEY (user_id) REFERENCES pp_3_1_2.users (id),
    FOREIGN KEY (role_id) REFERENCES pp_3_1_2.roles (id)
);